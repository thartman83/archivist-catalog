# -*- restclient -*-

# Init the db
POST http://0.0.0.0:8000/init

# Create a new tag
POST http://0.0.0.0:8000/tag
Content-Type: application/json
{
	"name": "tag1"
}

# Get a tag
GET http://0.0.0.0:8000/tag/tag1
Content-Type: application/json

# Get a tag
GET http://0.0.0.0:8000/tag/tag2
Content-Type: application/json

# Rename the tag
PUT http://0.0.0.0:8000/tag/tag1
Content-Type: application/json
{
	"new_name": "tag2"
}

# Get the new tag
GET http://0.0.0.0:8000/tag/tag2
Content-Type: application/json

# Delete the tag
DELETE http://0.0.0.0:8000/tag/tag1
Content-Type: application/json